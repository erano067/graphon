{
  "name": "graphon-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "dev": "pnpm --filter demo dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:coverage": "pnpm -r test:coverage",
    "lint": "eslint packages --ignore-pattern packages/storybook",
    "lint:fix": "eslint packages --ignore-pattern packages/storybook --fix",
    "lint:strict": "eslint packages --ignore-pattern packages/storybook --max-warnings 0",
    "format": "prettier --write \"packages/**/*.{ts,tsx,json}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,tsx,json}\"",
    "typecheck": "pnpm -r typecheck",
    "check-all": "pnpm typecheck && pnpm lint && pnpm format:check && pnpm test",
    "storybook": "pnpm --filter @graphon/storybook dev",
    "storybook:build": "pnpm --filter @graphon/storybook build"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.39.2",
    "@semantic-release/git": "^10.0.1",
    "@vitest/coverage-v8": "^4.0.18",
    "conventional-changelog-conventionalcommits": "^9.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "multi-semantic-release": "^3.0.2",
    "prettier": "^3.8.1",
    "semantic-release": "^24.2.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "packageManager": "pnpm@10.26.2"
}
